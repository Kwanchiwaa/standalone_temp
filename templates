<body>
    <h1>Real-Time Air Quality Dashboard</h1>

    <div class="data-box">
        <div class="label">Temperature (°C)</div>
        <div class="value" id="temp">--</div>
    </div>
    <div class="data-box">
        <div class="label">Humidity (%)</div>
        <div class="value" id="hum">--</div>
    </div>
    <div class="data-box">
        <div class="label">PM2.5 (µg/m³)</div>
        <div class="value" id="pm25">--</div>
    </div>

    <br>
    <button onclick="fetchLatest()">Refresh</button>

    <script>
        function fetchLatest() {
            fetch('/api/latest')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('temp').innerText = data.temperature + "°C";
                    document.getElementById('hum').innerText = data.humidity + "%";
                    document.getElementById('pm25').innerText = data.pm25 + " µg/m³";
                })
                .catch(err => {
                    alert("ไม่สามารถดึงข้อมูลได้");
                    console.error(err);
                });
        }

        // โหลดข้อมูลครั้งแรกตอนเปิดหน้า
        fetchLatest();
    </script>
</body>
